<link rel="stylesheet" href="/styles/styles.css">
<script src="/index.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<div class="background-overlay"></div>
<div class="notes-header">
    <h2>Bumble Notes</h2>
</div>
<div class="notes-container">
    <% if(locals.notes){%>
        <% notes.forEach(note => { %>
      <div class="note-card">
        <h3><%= note.title %></h3>
        <p><%= note.content %></p>
      </div>
    <% }) %>
    <%} else{%>
      <div class="'testNote">
        <div class="note-card empty-note">
            <h3>No notes available</h3>
            <p>Click the button below to create a new note.</p>
          </div>
      </div>
      </div>
      <div class="note-card new-note">
        <img src="/images/logos/edit.png" alt="Edit Icon" class="new" onclick="window.location.href='/createNote'">
      </div>
      <%}%>
  </div>
  